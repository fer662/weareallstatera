{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "**/*.spec.ts"
  ],
  "lib": ["es2017"]
}